<Window x:Class="MixedMessagesClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MixedMessagesClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#282828" FontSize="18">

    <Window.Resources>
        <Style x:Key="tBlockStock">
            <Style.Setters>
                <Setter Property="TextBlock.Background" Value="#282828"/>
                <Setter Property="TextBlock.Foreground" Value="LightGray"/>
                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                <Setter Property="TextBlock.FontWeight" Value="Bold"/>
                <Setter Property="TextBlock.Width" Value="400"/>
            </Style.Setters>
        </Style>
    </Window.Resources>  
    
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <TextBlock Text="Логин" Style="{StaticResource tBlockStock}" Padding="15 10" Margin="5"/>
            <TextBox Name="tBoxLogin" Width="400" Padding="15 10" Margin="5"/>
            <TextBlock Text="Пароль" Style="{StaticResource tBlockStock}" Padding="15 10" Margin="5"/>
            <TextBox Name="tBoxPassword" Width="400" Padding="15 10" Margin="5"/>
            <Button Name="buttLogin" Click="buttLogin_Click" Content="Войти" Width="140" Height="50" Padding="15 10" Margin="15"/>
            <TextBlock Name="tBlockStatus" Foreground="OrangeRed" Style="{StaticResource tBlockStock}" Padding="15 10" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
