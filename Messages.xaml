<Window x:Class="MixedMessagesClient.Messages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MixedMessagesClient"
        mc:Ignorable="d"
        Title="Messages" Height="450" Width="800" Background="#282828" FontSize="18">
        
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="75*" Name="messageGrid"/>
        </Grid.ColumnDefinitions>


        <DockPanel Grid.Column="1" Grid.Row="1" LastChildFill="True">
            <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" Height="35">
                <Button Name="buttSend" Click="buttSend_Click" Content="Отправить" HorizontalAlignment="Left" DockPanel.Dock="Right"/>
                <TextBox Name="tBoxMessage" HorizontalAlignment="Stretch" DockPanel.Dock="Left"/>
            </DockPanel>
            <ListBox Name="lBoxMessages"/>
        </DockPanel>
    </Grid>
</Window>
