<Window x:Class="MixedMessagesClient.Mess"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MixedMessagesClient"
        mc:Ignorable="d"
        Title="Mess" Height="450" Width="800" Background="#282828" FontSize="18">

    <Window.Resources>
        <Style TargetType="StackPanel" x:Key="tBoxMessage">
            <Style.Resources >
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="2"/>

        <DockPanel Grid.Column="0" HorizontalAlignment="Stretch" Width="auto" LastChildFill="False">
            <DockPanel DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Button Content="STN" Margin="5" Padding="3" DockPanel.Dock="Left"/>
                <TextBox TextChanged="tBoxSearch_TextChanged" x:Name="tBoxSearch" HorizontalAlignment="Stretch" Margin="5"/>
            </DockPanel>
        </DockPanel>

        <DockPanel Grid.Column="2">
            <DockPanel DockPanel.Dock="Bottom" MinHeight="35">
                <Button Name="buttSend" Click="buttSend_Click" Content="Отправить" DockPanel.Dock="Right" Padding="5" Margin="3"/>
                <TextBox DockPanel.Dock="Left" Margin="3"/>
            </DockPanel>
            <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Name="lBoxMessages" Focusable="False"
   					 HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="5" Background="#282828">
                <ListBox.ItemTemplate>
                    <DataTemplate x:Name="dataTempMessage">
                            <DockPanel LastChildFill="False">
                            <Border x:Name="borderMessage" CornerRadius="15">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="E:\\!\\mrbrokenglasses.png" MaxWidth="25" MaxHeight="25" x:Name="messageImage"/>
                                    <TextBlock Name="messageName" Text="Bill" Foreground="WhiteSmoke" DockPanel.Dock="Right" Margin="2" Padding="3" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                    <StackPanel Orientation="Vertical" x:Name="stackPanelMessage" Style="{StaticResource tBoxMessage}">
                                            <TextBlock Text="{Binding Path=MessageText}"  Padding="5 2 5 2" Margin="1"/>
                                            <TextBlock Text="{Binding Path=MessageDate}" FontSize="12" Padding="5 0 5 2" Margin="1"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            </DockPanel>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsSent}" Value="True">
                                <Setter TargetName="borderMessage" Property="DockPanel.Dock" Value="Right"/>
                                <Setter TargetName="borderMessage" Property="Background" Value="PaleGreen"/>
                                <Setter TargetName="messageImage" Property="Visibility" Value="Hidden"/>
                                <Setter TargetName="messageName" Property="Text" Value="Вы"/>
                                <Setter TargetName="messageName" Property="Foreground" Value="#282828"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsSent}" Value="False">
                                <Setter TargetName="borderMessage" Property="DockPanel.Dock" Value="Left"/>
                                <Setter TargetName="borderMessage" Property="Background" Value="DarkSlateBlue"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Grid>
</Window>
