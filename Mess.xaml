<Window x:Class="MixedMessagesClient.Mess"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MixedMessagesClient"
        mc:Ignorable="d"
        Title="Mess" Height="450" Width="800" Background="#282828" FontSize="18">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Center" Width="3"/>
        <DockPanel Grid.Column="2">
            <DockPanel DockPanel.Dock="Bottom" MinHeight="35">
                <Button Content="Отправить" DockPanel.Dock="Right" Padding="5" Margin="3"/>
                <TextBox DockPanel.Dock="Left" Margin="3"/>
            </DockPanel>
            <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Name="lBoxMessages" Focusable="False"
   					 HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <ListBoxItem>
                            <Border HorizontalAlignment="{Binding Alignment}">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Path=Text}"/>
                                    <TextBlock Text="{Binding Path=Date}"/>
                                </StackPanel>
                            </Border>
                        </ListBoxItem>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Grid>
</Window>
